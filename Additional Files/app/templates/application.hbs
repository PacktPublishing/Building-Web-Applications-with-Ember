{{#if session.isAuthenticated}}
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index' class="navbar-brand"}}Expenze Buddy{{/link-to}}
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            {{#link-to 'categories'}}Categories{{/link-to}}
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Welcome {{session.currentUser.email}} <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <a href="#" {{action "signOut"}}>Log out</a>
              </li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
  {{outlet}}
{{else}}
  <div class="container">
    <h4>Please login below</h4>
    <form>
      <div class="form-group">
        {{input type="text" value=userEmail class="form-control" placeholder="Email"}}
      </div>
      <div class="form-group">
        {{input type="password" value=userPassword class="form-control" placeholder="Password"}}
      </div>
      <button class="btn btn-default" {{action "signIn"}}>Sign in</button>
    </form>
  </div>
{{/if}}
